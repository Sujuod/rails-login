<div class="container">
    <div class="card card-container">
      <center><h3 class='bold'>Please Sign Up</h3></center>
        <p id="profile-name" class="profile-name-card"></p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control', :placeholder =>'Your Email' , :required=>true%>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" , class: 'form-control', :placeholder =>'Type Password' , :required=>true%>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', :placeholder =>'Confirm Password' , :required=>true %>
          </div>

          <div class="actions">
            <%= f.submit 'Sign up', :class => 'btn btn-lg btn-primary btn-block' %>
          </div>
        <% end %>
         <a href="/users/sign_in" class="pull-right need-help">already registered? Login </a>
    </div><!-- /card-container -->
</div><!-- /container -->
